{
  "manifest_version": 3,
  "name": "Git Pull Request Helper",
  "version": "1.0",
  "description": "A browser extension that helps you extract and analyze code changes from pull requests",
  "permissions": ["activeTab", "scripting", "storage", "tabs"],
  "host_permissions": ["https://dev.azure.com/*", "https://github.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    }
  },
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://dev.azure.com/*", "https://github.com/*"],
      "js": ["content.js", "azure-handler.js", "github-handler.js"],
      "type": "module"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["results.html", "azure-handler.js", "github-handler.js"],
      "matches": ["https://dev.azure.com/*", "https://github.com/*"]
    }
  ]
}
