{
  "manifest_version": 3,
  "name": "HTML File Extractor",
  "version": "1.0",
  "description": "Extract HTML files from webpages",
  "permissions": ["activeTab", "scripting", "tabs"],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*",
    "https://dev.azure.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [".env"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    }
  },
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
